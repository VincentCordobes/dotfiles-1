font pango:SpaceMonoNL 0

set $down  j
set $left  h
set $right l
set $up    k

set $black  #494B53
set $blue   #4078f2
set $grey   #f0f0f0
set $white  #fafafa

bindsym Mod1+Return exec i3-sensible-terminal
bindsym Mod1+Shift+q kill
bindsym Mod1+d exec "dmenu_run -fn SpaceMonoNL-15 -nb '$white' -nf '$black' -sb '$grey' -sf '$black'"

bindsym Mod1+$down  focus down
bindsym Mod1+$left  focus left
bindsym Mod1+$right focus right
bindsym Mod1+$up    focus up

bindsym Mod1+Shift+$down  move down
bindsym Mod1+Shift+$left  move left
bindsym Mod1+Shift+$right move right
bindsym Mod1+Shift+$up    move up

bindsym Mod1+Shift+v split h
bindsym Mod1+v       split v

bindsym Mod1+f fullscreen toggle
bindsym Mod1+s layout stacking
bindsym Mod1+w layout tabbed
bindsym Mod1+e layout toggle split

bindsym Mod1+Shift+space floating toggle
bindsym Mod1+space focus mode_toggle
bindsym Mod1+a focus parent
bindsym Mod1+Shift+minus move scratchpad
bindsym Mod1+minus scratchpad show

bindsym Mod1+1 workspace 1
bindsym Mod1+2 workspace 2
bindsym Mod1+3 workspace 3
bindsym Mod1+4 workspace 4
bindsym Mod1+5 workspace 5
bindsym Mod1+6 workspace 6
bindsym Mod1+7 workspace 7
bindsym Mod1+8 workspace 8
bindsym Mod1+9 workspace 9
bindsym Mod1+0 workspace 10

bindsym Mod1+Shift+1 move container to workspace 1
bindsym Mod1+Shift+2 move container to workspace 2
bindsym Mod1+Shift+3 move container to workspace 3
bindsym Mod1+Shift+4 move container to workspace 4
bindsym Mod1+Shift+5 move container to workspace 5
bindsym Mod1+Shift+6 move container to workspace 6
bindsym Mod1+Shift+7 move container to workspace 7
bindsym Mod1+Shift+8 move container to workspace 8
bindsym Mod1+Shift+9 move container to workspace 9
bindsym Mod1+Shift+0 move container to workspace 10

bindsym Mod1+Shift+c reload
bindsym Mod1+Shift+r restart
bindsym Mod1+Shift+e exec "i3-msg exit"

bindsym Mod1+r mode "resize"

mode "resize" {
  bindsym $down  resize grow   height 1 px or 1 ppt
  bindsym $left  resize shrink width  1 px or 1 ppt
  bindsym $right resize grow   width  1 px or 1 ppt
  bindsym $up    resize shrink height 1 px or 1 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# Touchpad natural scrolling
exec xinput set-prop "DELL07E6:00 06CB:76AF Touchpad" "Synaptics Scrolling Distance" -27 -27

# Touchpad disable tap
exec xinput set-prop "DELL07E6:00 06CB:76AF Touchpad" "Synaptics Tap Action" 0

# Dvorak alternative international no dead keys + russian
exec "setxkbmap -layout us,ru -variant 'dvorak-alt-intl', -option grp:shifts_toggle"

# Key repeat rate
exec "xset r rate 250 33"

# Redshift
# exec --no-startup-id redshift

# Alsa controls
bindsym XF86AudioMute        exec "amixer set Master toggle"
bindsym XF86AudioRaiseVolume exec "amixer set Master 3%+"
bindsym XF86AudioLowerVolume exec "amixer set Master 3%-"

# Brightness controls
bindsym XF86MonBrightnessUp   exec "light -A 3"
bindsym XF86MonBrightnessDown exec "light -U 3"

# Screenshots controls
bindsym --release Print exec "scrot /tmp/screenshot.png -s -z -e 'xclip -selection clipboard -t image/png -i $f'"

exec --no-startup-id "feh --bg-fill $HOME/.dotfiles/i3/background.jpg"
exec --no-startup-id "compton --config $HOME/.dotfiles/compton/config"
exec --no-startup-id $HOME/.dotfiles/polybar/start.sh
exec --no-startup-id $HOME/.dotfiles/sound/jack.sh

focus_follows_mouse no
hide_edge_borders   none

gaps inner 20

default_border pixel 1

# Client property       Border Backg. Text   Ind.   Child
client.focused          $grey  $grey  $black $white $grey
client.unfocused        $grey  $white $white $white $grey
client.focused_inactive $grey  $white $black $white $grey
client.urgent           $grey  $white $black $white $grey

# vim:ft=i3
