[colors]
dark-2e = #2e3440
dark-3b = #3b4252
dark-43 = #434c5e
dark-4c = #4c566a
blue = #5e81ac
green = #a3be8c
red = #bf616a
orange = #d08770
light-d8 = #d8dee9

[section/bar]
font-0 = FiraCode:pixelsize=12;3
font-1 = FontAwesome5FreeSolid:pixelsize=12;3
font-2 = DEATH_DEFY:pixelsize=20;5
background = ${colors.dark-2e}
foreground = ${colors.light-d8}
cursor-click = pointer
height = 32
module-margin-left  = 1
module-margin-right = 1
padding-left  = 1
padding-right = 1
radius = 0
monitor = eDP-1

[bar/top]
inherit = section/bar
modules-left = mpd
modules-center = date
modules-right = comodoro github

[bar/bottom]
inherit = section/bar
bottom = true
modules-left = battery cpu memory temperature filesystem volume xkeyboard
modules-center = title
modules-right = eth-down eth-up eth wlan-down wlan-up wlan-signal wlan unfog

[module/comodoro]
type = custom/script
exec = comodoro watch
label = %output%
tail = true
click-left = if [ -e /tmp/comodoro.pid ]; then comodoro stop; else comodoro start; fi
click-right = if [ -e /tmp/comodoro.pid ]; then comodoro stop; else comodoro start; fi

[module/unfog]
type = custom/script
exec = unfog status
label = %output%
interval = 15

[module/mpd]
type = internal/mpd
host = /run/user/$UID/mpd.sock
interval = 1
label-song = / %artist% / %title:0:50%
format-online = <icon-prev> <toggle> <icon-stop> <icon-next>  <icon-random> <icon-single> <icon-repeat> <label-song> 
icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-random = 
icon-single = 
icon-repeat = 
icon-prev-foreground = ${colors.dark-43}
icon-stop-foreground = ${colors.dark-43}
icon-play-foreground = ${colors.dark-43}
icon-pause-foreground = ${colors.blue}
icon-next-foreground = ${colors.dark-43}
label-song-foreground = ${colors.dark-2e}
toggle-off-foreground = ${colors.dark-43}
toggle-on-foreground = ${colors.light-d8}

[module/date]
type = internal/date
interval = 5
date =
time = %H:%M
date-alt = %A %B %e
time-alt =
label = %date%%time%
label-font = 3
label-foreground = ${colors.light-d8}
format-prefix = "- "
format-prefix-font = 3
format-prefix-foreground = ${colors.dark-43}
format-suffix = " -"
format-suffix-font = 3
format-suffix-foreground = ${colors.dark-43}

[module/github]
type = internal/github
token = ${file:~/.github.token}
empty-notifications = false
interval = 30
label  = %notifications:2% 
format = <label>
format-foreground = ${colors.blue}
api-url = https://api.github.com/
user = soywod

[module/battery]
type = internal/battery
adapter = AC
battery = BAT0
full-at = 99
poll-interval = 1
label-full =
label-charging  = %percentage:3%% 
format-charging-foreground = ${colors.orange}
label-discharging  = %percentage:3%%
format-discharging = <label-discharging> <ramp-capacity>
format-discharging-foreground = ${colors.light-d8}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.light-d8}

[module/memory]
type = internal/memory
interval = 5
label = %percentage_used:2%% 
label-foreground = ${colors.light-d8}

[module/cpu]
type = internal/cpu
interval = 5
label = %percentage:2%% 
label-foreground = ${colors.light-d8}

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 10
warn-temperature = 80
label = %temperature-c:5%
format = <label> <ramp>
format-foreground = ${colors.light-d8}
label-warn = %temperature-c:5%
format-warn = <label-warn> <ramp>
format-warn-foreground = ${colors.red}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.light-d8}

[module/filesystem]
type = internal/fs
interval = 60
mount-0 = /
label-mounted = %free:0:7% 
label-mounted-foreground = ${colors.light-d8}

[module/volume]
type = internal/alsa
label-volume  = %percentage:0:3%% 
label-volume-foreground = ${colors.light-d8}
label-muted = " --- "
label-muted-foreground = ${colors.dark-4c}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0  = caps lock
label-layout = %layout:2% 
label-layout-foreground = ${colors.light-d8}

[module/title]
type = internal/xwindow
label-maxlen = 50
label-foreground = ${colors.light-d8}

[section/network]
type = internal/network
interval = 5
unknown-as-up = true
accumulate-stats = true
format-disconnected =
label-connected-foreground = ${colors.light-d8}

[module/eth]
inherit = section/network
interface = eth0
label-connected = %local_ip% 

[module/eth-down]
inherit = section/network
interface = eth0
interval = 1
label-connected = %downspeed% 
label-connected-foreground = ${colors.green}

[module/eth-up]
inherit = section/network
interface = eth0
interval = 1
label-connected = %upspeed% 
label-connected-foreground = ${colors.red}

[module/wlan]
inherit = section/network
interface = wlp2s0
label-connected = %local_ip% 

[module/wlan-down]
inherit = section/network
interface = wlp2s0
interval = 1
label-connected = %downspeed% 
label-connected-foreground = ${colors.green}

[module/wlan-up]
inherit = section/network
interface = wlp2s0
interval = 1
label-connected = %upspeed% 
label-connected-foreground = ${colors.red}

[module/wlan-signal]
inherit = section/network
interface = wlp2s0
label-connected = (%essid%) %signal:2%% 

