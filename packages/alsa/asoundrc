}

# ---------------------------------------------------------- # Capture devices #

pcm.capture {
  type dsnoop
  ipc_key 219347
  slave.pcm "hw:Loopback,0,1"
}

# ------------------------------------------------------------ # Duplex device #

pcm.aduplex {
  type asym
  playback.pcm "playback"
  capture.pcm "capture"
}

# --------------------------------------------------------- # Loopback devices #

pcm.ploop {
  type plug
  slave.pcm "hw:Loopback,1,1"
}

pcm.cloop {
  type dsnoop
  ipc_key 219348
  slave.pcm "hw:Loopback,1,0"
}

# ---------------------------------------------------------- # Default devices #

pcm.pch {
  type hw
  card 0
}

pcm.isnoop {
  type dsnoop
  ipc_key 219346
  slave.pcm "pch"
}

ctl.!default {
  type hw
  card PCH
}

pcm.!default {
  type plug
  slave.pcm "aduplex"
}

pcm.card0 {
  type plug
  slave.pcm "aduplex"
}

