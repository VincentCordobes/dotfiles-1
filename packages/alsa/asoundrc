# --------------------------------------------------------- # Playback devices #

pcm.playback {
  type softvol
  min_dB -51.0
  max_dB   0.0

  control {
    name PCH
  }

  slave.pcm {
    type dmix
    ipc_key 219345
    slave.pcm "hw:Loopback,0,0"
  }

  # control {
